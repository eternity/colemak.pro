{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1",
      "minInstances": 0,
      "maxInstances": 5,
      "memory": "256MiB"
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 3001
    },
    "firestore": {
      "port": 3002
    },
    "hosting": {
      "port": 3000
    },
    "storage": {
      "port": 3003
    },
    "ui": {
      "enabled": true,
      "port": 3030
    },
    "singleProjectMode": true
  }
}
